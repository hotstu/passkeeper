<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="-1dp"
        android:left="0dp"
        android:right="0dp"
        android:top="-1dp">
        <shape android:shape="rectangle" >
            <size
                android:height="5dp"
                android:width="1dp" />
            <solid android:color="#33dddddd" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle" >
            <size
                android:height="2dp"
                android:width="1dp" />

            <solid android:color="#23000000" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="3dp">
        <shape android:shape="rectangle" >
            <size
                android:height="2dp"
                android:width="1dp" />

            <solid android:color="#23ffffff" />
        </shape>
    </item>

</layer-list>